<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#70DDD7FB"
    android:padding="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/forgotPasswordTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="Create a new password"
        android:textColor="#462E73"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/userNameReset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="User Name"
        android:textColor="#462E73"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/forgotPasswordTitle"
        app:layout_constraintStart_toStartOf="@+id/forgotPasswordTitle"
        app:layout_constraintTop_toBottomOf="@+id/forgotPasswordTitle" />

    <EditText
        android:id="@+id/etUserNameReset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/editbox_background"
        android:inputType="text"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="@id/userNameReset"
        app:layout_constraintStart_toStartOf="@+id/userNameReset"
        app:layout_constraintTop_toBottomOf="@+id/userNameReset" />


    <TextView
        android:id="@+id/passwordReset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Password"
        android:textColor="#462E73"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/etUserNameReset"
        app:layout_constraintStart_toStartOf="@id/etUserNameReset"
        app:layout_constraintTop_toBottomOf="@id/etUserNameReset" />

    <EditText
        android:id="@+id/etPasswordReset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/editbox_background"
        android:inputType="textPassword"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="@id/passwordReset"
        app:layout_constraintStart_toStartOf="@id/passwordReset"
        app:layout_constraintTop_toBottomOf="@id/passwordReset" />

    <TextView
        android:id="@+id/confirmPasswordReset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Confirm Password"
        android:textColor="#462E73"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/etPasswordReset"
        app:layout_constraintStart_toStartOf="@id/etPasswordReset"
        app:layout_constraintTop_toBottomOf="@id/etPasswordReset" />

    <EditText
        android:id="@+id/etConfirmPasswordReset"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/editbox_background"
        android:inputType="textPassword"
        android:padding="12dp"
        app:layout_constraintEnd_toEndOf="@id/confirmPasswordReset"
        app:layout_constraintStart_toStartOf="@id/confirmPasswordReset"
        app:layout_constraintTop_toBottomOf="@id/confirmPasswordReset" />


    <Button
        android:id="@+id/btnPasswordReset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="#462E73"
        android:backgroundTintMode="add"
        android:text="Reset Password"
        android:textColor="#F3DDD7FB"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/etConfirmPasswordReset"
        app:layout_constraintStart_toStartOf="@id/etConfirmPasswordReset"
        app:layout_constraintTop_toBottomOf="@id/etConfirmPasswordReset" />



</androidx.constraintlayout.widget.ConstraintLayout>